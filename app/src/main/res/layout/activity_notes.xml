<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#554f4f"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".NotesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="527dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Notes"
            android:textColor="#FF9800"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/notesSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="28dp"
            android:text="quick notes"
            android:textColor="#DCB479"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#716666"></View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/theNotes"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="16dp"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="30dp">
    <TextView
        android:id="@+id/notesEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End of notes"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#7e7171"
        android:layout_marginTop="30dp"
        android:textSize="16sp"></TextView>

    </LinearLayout>

</LinearLayout>