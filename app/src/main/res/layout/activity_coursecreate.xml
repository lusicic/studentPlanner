<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47444C"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#FF9800"
    android:outlineSpotShadowColor="#FF9800"
    tools:context=".CourseCreate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#38363C"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titlepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/assistant"
            android:text="Create new course"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textColorHighlight="#FFA200"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/round_grey"
            android:foreground="@drawable/ic_create"
            android:shadowColor="#EDE6E6"
            android:textAllCaps="false"
            android:textColor="#1C1C1C"
            android:textColorLink="#FFFFFF"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="370dp"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/round_primary"
            android:foreground="@drawable/ic_exit"
            android:textAllCaps="false"
            android:textColor="#776B6B"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="551dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="#FF9800"
        android:paddingTop="22dp"
        android:paddingBottom="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant"
                android:text="Add title"
                android:textColor="#FF9800"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/courseName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/assistant"
                android:hint="Title of Course"
                android:inputType="text"
                android:textColor="#FF9800" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/assistant"
                android:text="Add number of colloquium"
                android:textColor="#FF9800"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/examNum"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/assistant"
                android:hint="Number of colloquium"
                android:inputType="text"
                android:textColor="#FF9800" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/assistant"
                android:text="Add number of activity:"
                android:textColor="#FF9800"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numActivity"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/assistant"
                android:hint="Number of activity:"
                android:inputType="text"
                android:textColor="#FF9800" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addHomework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/assistant"
                android:text="Add number of homework:"
                android:textColor="#FF9800"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numHomework"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/assistant"
                android:hint="Number of homework:"
                android:inputType="text"
                android:textColor="#FF9800" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addGrade"
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/assistant"
                    android:text="Grade:"
                    android:textColor="#FF9800"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/numGrade"
                    android:layout_width="345dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/assistant"
                    android:hint="Add percentage of grade:"
                    android:inputType="text"
                    android:textColor="#FF9800" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>