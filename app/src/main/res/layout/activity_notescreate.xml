<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47444C"
    android:orientation="vertical"
    tools:context=".NotesEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#38363C"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titlepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/assistant"
            android:text="Create Notes"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="-13dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/round_grey"
            android:foreground="@drawable/ic_create"
            android:textAllCaps="false"
            android:textColor="#1C1C1C"
            android:textColorLink="#FFFFFF"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnCancelNotes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="375dp"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/round_primary"
            android:foreground="@drawable/ic_exit"
            android:textAllCaps="false"
            android:textColor="#776B6B"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:paddingTop="22dp"
        android:paddingBottom="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant"
                android:text="Title"
                android:textColor="#FF9800"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/assistant"
                android:hint="Title of notes:"
                android:inputType="text"
                android:textColor="#FF9800" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleDescr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/assistant"
                android:text="Description"
                android:textColor="#FF9800"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editDescr"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/assistant"
                android:hint="Add description"
                android:inputType="text"
                android:textColor="#FF9800" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleDate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/assistant"
                android:gravity="center"
                android:foreground="@drawable/ic_calendar"/>

            <EditText
                android:id="@+id/editDate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/assistant"
                android:gravity="center"
                android:inputType="text"
                android:textColor="#FF9800" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>